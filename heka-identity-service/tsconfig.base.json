{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "noUnusedLocals": true,
    "esModuleInterop": true
  }
}
