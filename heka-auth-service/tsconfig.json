{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es6",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@common/*": ["src/common/*"],
      "@config": ["src/core/config"],
      "@utils": ["src/common/utils"],
      "@const": ["src/common/const"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
